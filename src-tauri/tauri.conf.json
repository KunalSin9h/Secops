{
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:5005",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Secops",
    "version": "0.11.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "readDir": true,
        "readFile": true,
        "scope": [
          "$HOME/.secops/*",
          "$HOME/.secops/state/*"
        ],
        "writeFile": true
      },
      "shell": {
        "all": false,
        "open": false
      }
    },
    "bundle": {
      "active": true,
      "appimage": {
        "bundleMediaFramework": true
      },
      "category": "Utility",
      "copyright": "Kunal Singh \u003ckunal@kunalsin9h.com\u003e",
      "deb": {
        "depends": [
          "policykit-1"
        ],
        "desktopTemplate": "../assets/deb/secops.desktop"
      },
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.ubuntu.pkexec.secops",
      "longDescription": "An Ubuntu Desktop Application for managing security.",
      "shortDescription": "An Ubuntu Desktop Application for managing security.",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "center": true,
        "decorations": true,
        "fileDropEnabled": false,
        "fullscreen": false,
        "height": 850,
        "minHeight": 600,
        "minWidth": 868,
        "resizable": true,
        "title": "Secops",
        "transparent": false,
        "visible": false,
        "width": 1600
      },
      {
        "center": true,
        "decorations": false,
        "height": 350,
        "label": "loading",
        "resizable": false,
        "title": "Secops | Loading...",
        "url": "loading.html",
        "width": 300
      }
    ]
  }
}